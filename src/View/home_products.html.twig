{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/searchbar.css">
    <link rel="stylesheet" href="/assets/css/container.css">
    <link rel="stylesheet" href="/assets/css/sort.css">
    <link rel="stylesheet" href="/assets/css/button.css">
    <link rel="stylesheet" href="/assets/css/table.css">
{% endblock %}


{% block content %}
<h1>Manage products</h1>

{% if user_type == 'admin' or user_type == 'manager'  %}
    <div class="add-btn-container">
        <a href="product/add">
            <button class="add-btn">+ Product</button>
        </a>
    </div>
{% endif %}

<hr>

<div class="search-container">
    <form id="searchForm" method="GET" action="/product">
        <input type="text" name="search" id="searchInput" placeholder="Search a product..." value="{{ search ?? '' }}">
        <button type="submit" id="searchBtn">✖️</button>
        <input type="hidden" name="sort" value="{{ sort ?? 'name_asc' }}">
        <input type="hidden" name="action" id="actionInput" value="reset">
    </form>
</div>

<hr>

<form method="get" action="/product">
<input type="hidden" name="search" value="{{ search ?? '' }}">
    <div class="dropdown">
        <button type="button" class="dropbtn" onclick="toggleDropdown()">Sort ▾</button>
        <ul class="dropdown-content" id="dropdownMenu">

            <li>
                <label>
                    <input type="radio" name="sort" value="sku_asc"
                           {% if sort == 'sku_asc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    SKU 1→9
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="sku_desc"
                           {% if sort == 'sku_desc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    SKU 9→1
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="name_asc"
                           {% if sort == 'name_asc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Name A→Z
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="name_desc"
                           {% if sort == 'name_desc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Name Z→A
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="purchase_asc"
                           {% if sort == 'purchase_asc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Purchase price 1→9
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="purchase_desc"
                           {% if sort == 'purchase_desc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Purchase price 9→1
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="selling_asc"
                           {% if sort == 'selling_asc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Selling price 1→9
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="selling_desc"
                           {% if sort == 'selling_desc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Selling price 9→1
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="category_asc"
                           {% if sort == 'category_asc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Category A→Z
                </label>
            </li>
            <li>
                <label>
                    <input type="radio" name="sort" value="category_desc"
                           {% if sort == 'category_desc' %}checked{% endif %}
                           onchange="this.form.submit()">
                    Category Z→A
                </label>
            </li>
        </ul>
    </div>
</form>

<h2>RESULT</h2>
<div class="section-container">
{% if products is empty %}
    <span class="no-action">No products</span>
{% else %}
   


<table>
    <thead>
        <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Description</th>
            <th>Purcase price (€)</th>
            <th>Selling price (€)</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr data-id="{{ product.id_product }}" class="clickable-row">
            <td>{{ product.sku|e }}</td>
            <td>{{ product.name|e }}</td>
            <td>{{ product.description|e }}</td>
            <td>{{ product.purchase_price|number_format(2, ',', ' ') }}</td>
            <td>{{ product.selling_price|number_format(2, ',', ' ') }}</td>
            <td>{{ product.category|e }}</td>
            <td>
    {% if user_type == 'admin' or user_type == 'manager' %}
        <div class="form-button-container">
            <!-- Bouton Edit -->
            <form method="POST" action="/product/edit">
                <input type="hidden" name="id_product" value="{{ product.id_product }}">
                <button type="submit" class="form-edit-btn"
                        onclick="event.stopPropagation(); return confirm('Edit this product ?');">
                        Edit
                </button>
            </form>

            <!-- Bouton Delete -->
            <form method="POST" action="/product/delete">
                <input type="hidden" name="id_product" value="{{ product.id_product }}">
                <button type="submit" class="form-delete-btn"
                        onclick="event.stopPropagation(); return confirm('Remove this product ?');">
                    Delete
                </button>
            </form>
        </div>
    {% else %}
        <p class="no-action">No action</p>
    {% endif %}
</td>

        </tr>
        {% endfor %}
    </tbody>
</table>
   
    {% endif %}
    
</div>

<div class="modal fade" id="chartModal" tabindex="-1" aria-labelledby="chartModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="chartModalLabel">Product statistics</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <canvas id="myChart" height="100"></canvas>
      </div>
    </div>
  </div>
</div>


{% endblock %}
{% block javascripts %}
    <script src="/assets/js/sort.js"></script>
    <script src="/assets/js/search.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/assets/js/modal.js"></script>



{% endblock %}