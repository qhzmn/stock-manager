{% extends 'base.html.twig' %}

{% block title %}Accueil - Trouve ton stage{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="/assets/css/container.css">
<link rel="stylesheet" href="/assets/css/form.css">
<link rel="stylesheet" href="/assets/css/button.css">



{% endblock %}
{% block content %}
<h2>Edit this product</h2>
<div>


<form action="/product/edit" id="productForm" method="POST" class="form-container">
<input type="hidden" name="id_product" value="{{ product.id_product|e }}">
<div class="form-group">
        <label for="SKU">Product SKU :*</label>
        <input type="text" id="SKU" name="SKU" value="{{ product.sku|e }}" required>
        <div class="errorInput" id="skuError"></div>
    </div>

    <div class="form-group">
        <label for="name">Product name :*</label>
        <input type="text" id="name" name="name" value="{{ product.name|e }}" required>
        <div class="errorInput" id="nameError"></div>
    </div>

    <div class="form-group">
        <label for="description">Description :*</label>
        <textarea id="description" name="description" required>{{ product.description|e }}</textarea>
        <div class="errorInput" id="descriptionError"></div>
    </div>


    <div class="form-group">
        <label for="quantity">Quantity :</label>
        <input type="number" id="quantity" name="quantity" value={{ product.quantity|e }}>
        <div class="errorInput" id="quantityError"></div>
    </div>

    <div class="form-group">
        <label for="purchase">Purchase price (€) :</label>
        <input type="number" id="purchase" name="purchase" step="0.01" value="{{ product.purchase_price|e }}">
        <div class="errorInput" id="purchaseError"></div>
    </div>

    <div class="form-group">
        <label for="selling">Selling price (€) :</label>
        <input type="number" id="selling" name="selling" step="0.01" value="{{ product.selling_price|e }}">
        <div class="errorInput" id="sellingError"></div>
    </div>

    <div class="form-group">
        <label for="category">Category :</label>
        <input type="text" id="category" name="category" value="{{ product.category|e }}">
        <div class="errorInput" id="categoryError"></div>
    </div>

    <div class="form-group">
        <button type="submit" class="form-button">Edit</button>
    </div>
</form>
</div>


{% endblock %}
{% block javascripts %}
    <script src="/assets/js/add_product_validation.js"></script>
{% endblock %}