{% extends 'base.html.twig' %}

{% block title %}Accueil - Trouve ton stage{% endblock %}
{% block stylesheets %}

<link rel="stylesheet" href="/assets/css/container.css">
<link rel="stylesheet" href="/assets/css/form.css">
<link rel="stylesheet" href="/assets/css/button.css">

{% endblock %}
{% block content %}
<div>
    <h2>Add a product</h2>

    <form action="/product/add" id="productForm" method="POST" class="form-container">
    <div class="form-group">
        <label for="SKU">Product SKU :*</label>
        <input type="text" id="SKU" name="SKU" required>
        <div class="errorInput" id="skuError"></div>
    </div>

    <div class="form-group">
        <label for="name">Product name :*</label>
        <input type="text" id="name" name="name" required>
        <div class="errorInput" id="nameError"></div>
    </div>

    <div class="form-group">
        <label for="description">Description :</label>
        <textarea id="description" name="description"></textarea>
        <div class="errorInput" id="descriptionError"></div>
    </div>

    <div class="form-group">
        <label for="quantity">Quantity :</label>
        <input type="number" id="quantity" name="quantity">
        <div class="errorInput" id="quantityError"></div>
    </div>

    <div class="form-group">
        <label for="purchase">Purcase price (€) :</label>
        <input type="number" id="purchase" name="purchase" step="0.01">
        <div class="errorInput" id="purchaseError"></div>
    </div>

    <div class="form-group">
        <label for="selling">Selling price (€) :</label>
        <input type="number" id="selling" name="selling" step="0.01">
        <div class="errorInput" id="sellingError"></div>
    </div>

    <div class="form-group">
        <label for="category">Category :</label>
        <input type="text" id="category" name="category">
        <div class="errorInput" id="categoryError"></div>
    </div>

    <div class="form-group">
        <button type="submit" class="form-button">Add</button>
    </div>
</form>
<div>

    


{% endblock %}
{% block javascripts %}
    <script src="/assets/js/add_product_validation.js"></script>
{% endblock %}